<%- include("partials/header"); -%>
<div class="main-section">
  <div class="container">
    <h1>Compose</h1>

    <form action="/compose" method="post" class="compose-form">
      <div class="form-group">
        <label>Title</label>
        <input type="text" class="form-control" name="postTitle" />
        <label>Post</label>
        <textarea
          name="postBody"
          id="postBody"
          cols="30"
          rows="5"
          class="form-control"
        ></textarea>
      </div>
      <button class="mb-3 btn btn-lg btn-block btn-dark bg-dark">
        Publish
      </button>
    </form>

    <%- include("partials/footer"); -%>

    <!-- contact-button btn  btn-dark  -->
  </div>
</div>
