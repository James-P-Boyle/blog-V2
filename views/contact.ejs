<%- include("partials/header") %>
<div class="main-section">
  <div class="container">
    <h1>Contact Me</h1>

    <!-- Form that requires no backend - directly emails my email -  -->
    <form
      target="_self"
      action="https://formsubmit.co/jamesboyle9292@gmail.com"
      method="POST"
      class="contact-form"
    >
      <div class="form-group">
        <div class="form-row">
          <div class="col">
            <!--  adds subject field to the email -->
            <input type="hidden" name="_subject" value="Email from WBS Blog" />
            <!-- disables the _captcha -->
            <input type="hidden" name="_captcha" value="false" />
            <input
              type="text"
              name="name"
              class="form-control"
              placeholder="Full Name"
              required
            />
          </div>
          <div class="col">
            <input
              type="email"
              name="email"
              class="form-control"
              placeholder="Email Address"
              required
            />
          </div>
        </div>
      </div>
      <div class="form-group">
        <textarea
          placeholder="Your Message"
          class="form-control"
          name="message"
          rows="10"
          required
        ></textarea>
      </div>
      <input
        type="hidden"
        name="_next"
        value="http://localhost:3000/thankYou"
      />
      <button type="submit" class="btn btn-lg btn-dark btn-block">
        Submit
      </button>
    </form>

    <%- include("partials/footer") %>
  </div>
</div>
