<%- include("partials/header"); -%>

<div class="wrapper">
  <header>
    <img src="/images/code.png" class="background" />
    <img src="/images/Berlin-SkyLine.png" class="foreground" />

    <h1 class="title">Welcome To My Blog!</h1>
  </header>
  <div class="main-section">
    <div class="home-text">
      <h1 id="home">Home</h1>
      <p><%= startingContent %></p>
    </div>
    <div class="container">
      <% posts.forEach(function(post) { %>
      <h1><%=post.title%></h1>
      <p>
        <%=post.content.substring(0, 350) + ". . ."%>
        <a href="/posts/<%=post.id%>">Read More</a>
      </p>

      <% }) %> <%- include("partials/footer"); -%>
    </div>
  </div>
</div>
